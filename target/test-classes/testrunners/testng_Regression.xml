<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="5" name="Regression Suite Opencart Site Automated Test Cases" parallel="tests" verbose="-1">
    <listeners>
        <listener class-name="com.qa.opencart.listeners.ExtentReportListener"/>
	</listeners>
    <test name="Regression Test_Chrome->Home Page" enabled="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.testcases.HomePageTestClass"/>
        </classes>
    </test>
    <test name="Regression Test_Edge->Home Page" enabled="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.qa.opencart.testcases.LoginPageTest"/>
        </classes>
    </test>
</suite>
